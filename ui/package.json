{
  "type": "module",
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "rsbuild build",
    "dev": "rsbuild build --watch --env-mode=development",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "prettier": "prettier --write src/",
    "test:unit": "vitest --passWithNoTests",
    "type-check": "vue-tsc --build"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@floating-ui/dom": "^1.7.4",
    "@halo-dev/api-client": "^2.21.1",
    "@halo-dev/components": "^2.21.0",
    "@halo-dev/console-shared": "^2.21.0",
    "@halo-dev/richtext-editor": "https://pkg.pr.new/@halo-dev/richtext-editor@fca4c32",
    "@tiptap/suggestion": "^3.12.1",
    "@vueuse/core": "^14.1.0",
    "axios": "^1.13.2",
    "emoji-mart": "^5.6.0",
    "vue": "^3.5.25"
  },
  "devDependencies": {
    "@halo-dev/ui-plugin-bundler-kit": "https://pkg.pr.new/@halo-dev/ui-plugin-bundler-kit@fca4c32",
    "@iconify/json": "^2.2.414",
    "@rsbuild/core": "^1.6.12",
    "@rsbuild/plugin-sass": "^1.4.0",
    "@tsconfig/node20": "^20.1.8",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.25",
    "@unocss/eslint-config": "^66.5.10",
    "@unocss/webpack": "^66.5.10",
    "@vitest/eslint-plugin": "^1.5.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-oxlint": "^0.16.12",
    "eslint-plugin-vue": "~10.0.1",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.16.12",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "sass": "^1.94.2",
    "typescript": "~5.8.3",
    "unocss": "^66.5.10",
    "unplugin-icons": "^22.5.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.12"
  },
  "packageManager": "pnpm@9.15.9"
}
